<%- include('header-1') -%>




<main class="main">



    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Wallet
            </div>
        </div>
    </div>

    
    
    <section class="mt-50 mb-50">

        <div class="container">



            <div class="row">
               
                <div class="col-6 my-2 ">
 
                        <div class="coupon">                           
                            <div class="coupon-details">
                                <h2 class="coupon-title">Your Wallet</h2>
                                <p class="coupon-desc">Available Balance: <span style="color: rgb(53, 235, 53);"><%= amount %></span></p>
                                <!-- <p class="coupon-validity">Add more</p> -->
                               
                            </div>
                        </div>
                 </div>       
            </div>
      



        <!-- transaction details -->

        <div class="content-header " style="margin-top: 40px;">
            <h2 class="coupon-title mt-5">Transactions </h2>
        </div>

        <% if (locals.transaction && locals.transaction.length > 0) { %>
        <div class="card mt-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                       
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Transaction ID</th>
                                        <th>Date</th>
                                        <th>Credit/Debit</th>
                                        <th>Amount</th>
                                
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for ( let i =transaction.length-1 ; i>= 0 ; i--) { %>
                                    <tr>
                                        <td class="align-middle"><b>#0<%= transaction.length-i %></b></td>
                                        <td class="align-middle"><%= locals.date[i] %></td>
                                        <td class="align-middle">
                                            <% if (transaction[i].type === 'credit') { %>
                                            <span class="badge badge-success"><%= locals.transaction[i].type %></span>
                                            <% } else { %>
                                                <span class="badge badge-danger"><%= locals.transaction[i].type %></span>
                                                <% } %>
                                            
                                        </td>
                                        <td class="align-middle">
                                            <% if (transaction[i].type === 'credit') { %>
                                            <span style="color: rgb(34, 237, 34);"><%= locals.total[i] %></span>
                                            <% } else { %>
                                                <span style="color: rgb(243, 47, 12);"><%= locals.total[i] %></span>
                                                <% } %>
                                        </td>
                                       
                                    </tr>
                                   <% } %>
                                </tbody>
                            </table>
                        </div> 
                    </div>
                    
                </div> <!-- row end// -->
            </div> <!-- card-body // -->
            
        
        </div>

        <% } else { %>
            <p>No Transactions</p>
            <% } %>
         
    </div>
    </section>

    <script src="https://kit.fontawesome.com/9d8a8e76c7.js" crossorigin="anonymous"></script>

<%- include('footer-1') -%>