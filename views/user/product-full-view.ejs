        function addtoCart(productId) {
  console.log(productId);
  $.ajax({
    url: `/add-to-cart/${productId}`,
    method: "get",
    success: (response) => {
      if (response.status) {
        swal({
          title: "Good job!",
          text: "Product Added Successfully!",
          icon: "success",
          button: false,
          timer: 1000,
        });
      }
    },
  });
}


function addWishlist(prodId){
