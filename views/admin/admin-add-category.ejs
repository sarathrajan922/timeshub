                    <thead>
                      <tr>
                        <th>SL.NO</th>
                        <th>Name</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <!-- loop existing category list -->
                      <% for(var i=0; i< locals.array.length; i++) { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><b><%= locals.array[i].name %></b></td>

                        <td>
                          <!--delete button -->
                          <a
                            onclick="deleteCategory('<%= locals.array[i]._id %>')"
                          >
                            <button
                              class="btn btn-xs"
                              style="background-color: rgb(235, 44, 44)"
                            >
                              Delete
                            </button>
                          </a>
                        </td>
                      </tr>

                      <% } %>
                    </tbody>
                  </table>
