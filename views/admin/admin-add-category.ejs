    <script>
      function deleteCategory(id) {
        swal({
          title: "Are you sure?",
          text: "",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        }).then((willDelete) => {
          if (willDelete) {
            swal("Poof! Your category has been Deleted!", {
              icon: "success",
            }).then(() => {
              deleteCat(id);
            });
          } else {
            swal("Your category is safe!");
          }
        });
      }

      function deleteCat(id) {
        $.ajax({
          url: `/admin/category-delete/${id}`,
          type: "get",
          success: (response) => {
            if (response.status) {
              location.reload();
            }
          },
        });
      }
    </script>
