        <section class="content-main">

            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Offers </h2>
                    <p>Add and manage offers</p>
                </div>
            </div>
            <div class="card ">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 shadow p-3 mb-5 bg-body rounded">
                            <h4 class="mb-3">category offer</h4>
                            <form method="POST" action="/admin/admin-categoryoffer-submit">
                                <label for="category">Category:</label>

                                <select class="form-select" name="category" id="main-category">

                                    <option>Select</option>
                                      <% for(let i=0; i< locals.categoryList.length; i++) { %>                                         
                                            <option ><%= locals.categoryList[i].name %></option>

                                           <% } %>
                                </select>
    
                                <label for="discountPercentage">Discount Percentage:</label>
                                <input class="form-control" type="number" name="discountPercentage" id="discountPercentage"
                                    min="0" max="90">
    
                                <label for="startDate">Start Date:</label>
                                <input class="form-control" type="date" name="startDate" id="startDate" required>
    
                                <label for="endDate">End Date:</label>
                                <input class="form-control" type="date" name="endDate" id="endDate" required>
    
                                <hr>
                                <button class="btn btn-success" type="submit">Create Discount</button>
                            </form>
                        </div>



                        <div class="col-md-8 ms-2 shadow p-3 mb-5 bg-body rounded">
                           

                                <h4 class="mb-3">product offer</h4>

                                <div class="col-md-3">
                                    <form method="POST" action="/admin/admin-productoffer-submit">
                                        <label for="category">Product:</label>
        
                                        <select class="form-select" name="product" id="main-category">
                                            <option>Select</option>
                                            <% for (let j =0 ; j< productList.length ; j++) { %>
                                            <option ><%= locals.productList[j].product %></option>
                                            <% } %>
                                           
                                        </select>
            
                                        <label for="discountPercentage">Discount Percentage:</label>
                                        <input class="form-control" type="number" name="discountPercentage" id="discountPercentage"
                                            min="0" max="90">
            
                                        <label for="startDate">Start Date:</label>
                                        <input class="form-control" type="date" name="startDate" id="startDate" required>
            
                                        <label for="endDate">End Date:</label>
                                        <input class="form-control" type="date" name="endDate" id="endDate" required>
            
                                        <hr>
                                        <button class="btn btn-success" type="submit">Create Discount</button>
                                    </form>
                                </div>


                               

                            
